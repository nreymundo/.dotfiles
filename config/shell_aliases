# Programs shortcuts
alias vtop='vtop --theme wal --no-mouse'
alias r="ranger"
alias sr="sudo ranger"
alias v="vim"

# Config shortcuts
alias cfi="$EDITOR $HOME/.i3/config"
alias cfb="$EDITOR $HOME/.bashrc"
alias cfp="$EDITOR $HOME/.profile"
alias cfv="$EDITOR $HOME/.vimrc"
alias cfs="$EDITOR $SCRIPTS"
alias cfx="$EDITOR $HOME/.xinitrc"
alias cfc="$EDITOR $CONFIG/compton.conf"
alias cfa="$EDITOR $CONFIG/shell_aliases"

# Misc
alias cp="cp -i"
alias df="df -h"
alias free="free -m"
alias np="vim -w PKGBUILD"
alias p="sudo pacman"
alias SS="sudo systemctl"
alias rf="source $HOME/.bashrc"
